<div class="footer-menu">
    {# <h4 class="title {{footer_title_color}}">{{ "METRICALO.USEFUL_LINKS"|t|upper }}</h4> #}
     <h4 class="title {{footer_title_color}}">{{ homepage_content.footer_link_title2.translatable }}</h4>

    {% for link in privacyLinks %}
        {% set link_page = pages.find(link) %}
        {% if link_page %}
            <div class="menu-item">
                <a rel="noopener noreferrer" class="{{footer_text_color}}" href="{{ link_page.url }}">{{ link_page.menu }}</a>
            </div>
        {% endif %}
    {% endfor %}

</div>
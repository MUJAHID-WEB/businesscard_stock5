<div class="footer-menu">
    <h4 class="title {{footer_title_color}}">{{ "METRICALO.FOOTER_LINKS"|t|upper }}</h4>
    
    {% for link in privacyLinks %}
        {% set link_page = pages.find(link) %}
        {% if link_page %}
            <div class="menu-item">
                <a rel="noopener noreferrer" class="{{footer_text_color}}" href="{{ link_page.url }}">{{ link_page.menu }}</a>
            </div>
        {% endif %}
    {% endfor %}

</div>